{
  "name": "alchemi-react-express-template",
  "version": "1.0.0",
  "description": "React + Express monorepo template with shadcn/ui and Tailwind CSS",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd web && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build": "npm run build:web",
    "build:web": "cd web && npm run build",
    "build:api": "cd api && npm run build",
    "install:all": "npm install && cd web && npm install && cd ../api && npm install",
    "type-check": "cd web && npm run type-check",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd web && npm test",
    "test:api": "cd api && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "react",
    "express",
    "monorepo",
    "typescript",
    "tailwind",
    "shadcn",
    "vite"
  ],
  "author": "Alchemi",
  "license": "MIT"
}